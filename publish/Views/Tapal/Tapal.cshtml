                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group custom-form-group">
                                                            <label>PI Name</label>
                                                            @Html.DropDownListFor(m => m.PIName, new SelectList(ViewBag.UserList, "id", "name"), "Select User", new { @class = "form-control", @id = "User" })
                                                        </div>
                                                    </div>

                                                </div>

