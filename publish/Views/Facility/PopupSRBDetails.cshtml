@model IOAS.Models.SRBDetailsModel

<div class="popup-dts">
    <div class="row">
        <div class="col-md-6">
            <div class="ls-dts">
                <p>
                    <span>SRB Number</span>
                    <b>@Html.DisplayFor(m=>m.SRBNumber)</b>
                </p>
            </div>
            <div class="ls-dts">
                <p>
                    <span>Department</span>
                    <b>@Html.DisplayFor(m => m.Department)</b>
                </p>
            </div>
            <div class="ls-dts">
                <p>
                    <span>Invoice number</span>
                    <b>@Html.DisplayFor(m => m.InvoiceNumber)</b>
                </p>
            </div>
            <div class="ls-dts">
                <p>
                    <span>Supplier Name</span>
                    <b>@Html.DisplayFor(m => m.SupplierName)</b>
                </p>
            </div>
            <div class="ls-dts">
                <p>
                    <span>Tax Rate</span>
                    <b>@Html.DisplayFor(m => m.TaxRate)</b>
                </p>
            </div>
            <div class="ls-dts">
                <p>
                    <span>PO Document</span>
                    @if (!String.IsNullOrEmpty(Model.DocFullName))
                    {
                        <a class="icn" data-toggle="tooltip" data-placement="top" title="@Model.DocName" href="@Url.Action("ShowDocument", "Home", new { file = Model.DocFullName, filePath = "~/Content/SRBDocuments/" })" target="_blank"> <i class="ion-document" style="font-size: 22px;"></i></a>
                    }
                    else
                    {
                        <a class="icn" data-toggle="tooltip" data-placement="top" title="NA" href="javascript:void(0)"> <i class="ion-document" style="font-size: 22px;"></i></a>
                    }
                </p>
            </div>

            
           
        </div>
        <div class="col-md-6">
            <div class="ls-dts">
                <p>
                    <span>SRB Date</span>
                    <b>@Html.DisplayFor(m => m.SRBDate)</b>
                </p>
            </div>
            <div class="ls-dts">
                <p>
                    <span>Inward Date</span>
                    <b>@Html.DisplayFor(m => m.InwardDate)</b>
                </p>
            </div>
            
            
            <div class="ls-dts">
                <p>
                    <span>Invoice Date</span>
                    <b>@Html.DisplayFor(m => m.InvoiceDate)</b>
                </p>
            </div>
            <div class="ls-dts">
                <p>
                    <span>Amount</span>
                    <b>@Html.DisplayFor(m => m.NetTotalAmount)</b>
                </p>
            </div>
            <div class="ls-dts">
                <p>
                    <span>PONumber</span>
                    <b>@Html.DisplayFor(m => m.PONumber)</b>
                </p>
            </div>
           
        </div>
        <div class="col-md-12">
            <div class="ls-dts">
                <p>
                    <span>Remarks</span>
                    <b>@Html.Raw(Model.Remarks)</b>
                </p>
            </div>
        </div>
        <div class="col-md-12">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th><b>Item Category</b></th>
                        <th><b>Item Name</b></th>
                        <th><b>Item Number</b></th>
                        <th><b>Quantity</b></th>
                        <th><b>Item Value</b></th>
                        <th><b>Asset</b></th>
                        <th><b>Buyback</b></th>
                    </tr>

                    @for (int i = 0; i < Model.ItemCategory.Length; i++)
            {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => m.ItemCategory[i])
                            </td>
                            <td>
                                @Html.DisplayFor(m => m.ItemName[i])
                            </td>
                            <td>
                                @Html.DisplayFor(m => m.ItemNumber[i])
                            </td>
                            <td>
                                @Html.DisplayFor(m => m.Quantity[i])
                            </td>
                            <td>
                                @Html.DisplayFor(m => m.TotalAmount[i])
                            </td>
                            <td>
                                @Html.DisplayFor(m => m.Asset[i])
                            </td>
                            <td>
                                @Html.DisplayFor(m => m.selBuyBackNo[i])
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>
    <a href="javascript:void(0)" class="close-btn">
        <i class="ion-android-cancel"></i>
    </a>

</div>
