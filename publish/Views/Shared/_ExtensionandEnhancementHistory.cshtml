
@model IOAS.Models.ProjectEnhanceandExtenDetailsModel
<div class="row mt30">
    <div id="ViewDetailsModal" class="modal fade modal-pr-vw" role="dialog">
        <div class="modal-dialog modal-lg">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <div class="row hd-tt-bg">
                        <div class="col-md-12">
                            <h4><b>Project Enhancement and Extension Details</b></h4>
                        </div>
                    </div>
                </div>
                <div class="modal-body">
                    <div class="col-md-8">
                        <h4><b>Project Title - @Html.DisplayFor(m => m.Projecttitle, new { @class = "form-control", @readonly = true })</b></h4>
                    </div>
                    <div class="col-md-4">
                        <div class="reg-no">
                            <div class="form-group custom-form-group ">
                                <label> Project Number </label>
                                @Html.TextBoxFor(m => m.ProjectNumber, new { @class = "form-control", @id = "projectnum", @onkeypress = "return noedit();", @readonly = true })

                                @Html.ValidationMessageFor(m => m.ProjectNumber)

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="page-wrapper">
                            <div class="col-md-12">
                                <div class="col-md-12">
                                    <h4><b>Project Enhancement Details</b></h4>
                                </div>
                                <div class="">
                                    <div class="row">
                                        <div class="col-md-12">

                                            <div class="m-b-sm">
                                                <table class="table table-bordered">
                                                    <thead>
                                                        <tr>
                                                            <th>Enhancement Order Number</th>
                                                            <th>Date of Enhancement</th>
                                                            <th>Enhancement Value</th>                                                            
                                                            <th>Previous Value</th>
                                                            <th>Attached Document</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody id="gridViewDetailsdata">
                                                        @if (Model.EnhanceRefNumber != null)
                                                        {
                                                        for (int i = 0; i < Model.EnhanceRefNumber.Count(); i++)
                                                        {
                                                        <tr>
                                                            <td>@Html.DisplayFor(m => m.EnhanceRefNumber[i], new { @class = "form-control" })</td>
                                                            <td>@Html.DisplayFor(m => m.EnhancedDate[i], new { @class = "form-control" })</td>
                                                            <td>@Html.DisplayFor(m => m.EnhancedSanctionValue[i], new { @class = "form-control" })</td>
                                                            <td>@Html.DisplayFor(m => m.OldSanctionValue[i], new { @class = "form-control" })</td>
                                                             @if (Model.Enhancedocname[i] != null)
                                                             {
                                                                 <td><a href="@Url.Action("ShowDocument", "Project", new { file = Model.Enhancedocname[i], filepath = Model.EnhancedocPath[i] })" target="_blank">View Document</a></td>
                                                             }
                                                            @if (Model.Enhancedocname[i] == null)
                                                            {
                                                                <td>No Document</td>
                                                            }
                                                        </tr>
                                                        }
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="col-md-12">
                                    <h4><b>Project Extension Details</b></h4>
                                </div>
                                <div class="">
                                    <div class="row">
                                        <div class="col-md-12">

                                            <div class="m-b-sm">
                                                <table class="table table-bordered">
                                                    <thead>
                                                        <tr>
                                                            @*<th>Extension Order Number</th>*@
                                                            <th>Date of Extension</th>
                                                            <th>Extended Due Date</th>
                                                            <th>Previous Due Date</th>
                                                            <th>Attached Document</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody id="gridViewDetailsdata">
                                                        @if (Model.ExtenRefNumber != null)
                                                        {
                                                        for (int i = 0; i < Model.ExtenRefNumber.Count(); i++)
                                                        {
                                                        <tr>
                                                            @*<td>@Html.DisplayFor(m => m.ExtenRefNumber[i], new { @class = "form-control" })</td>*@
                                                            <td>@Html.DisplayFor(m => m.ExtendedDate[i], new { @class = "form-control" })</td>
                                                            <td>@Html.DisplayFor(m => m.ExtndDueDate[i], new { @class = "form-control" })</td>
                                                            <td>@Html.DisplayFor(m => m.PrsntDueDate[i], new { @class = "form-control" })</td>
                                                            @if (Model.Extendocname[i] != null)
                                                            {
                                                                <td><a href="@Url.Action("ShowDocument","Project",new { file = Model.Extendocname[i], filepath = Model.ExtendocPath[i] })" target="_blank">View Document</a></td>
                                                            }
                                                            @if (Model.Extendocname[i] == null)
                                                            {
                                                                <td>No Document</td>
                                                            }
                                                        </tr>
                                                        }
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
</div>
<script type="text/javascript">

    $(document).ready(function () {
        var errMsg = '@ViewBag.errMsg';
        if (errMsg) {
            $("#FailedAlert").html(errMsg);
            $('#Failed').modal('show');
        }
        $('#projectopening').show();
        $("#gridlist").hide();
       
    });


</script>