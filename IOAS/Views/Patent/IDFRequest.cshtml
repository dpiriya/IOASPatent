            $('.Trademark').show();
            $('.Patent').hide();
            $('.divPatent').hide();
            $('.divPatcopy').hide();
            $('.CopyRight').hide();
            $('.divCopyRight').hide();
            $('.divTrademark').show();
            showTab(currentTab, c, d);
