                                                        {
                                                            foreach (var item in Model.PreviousReceiptDetails)
                                                            {
                                                                <tr>
                                                                    <td>@Html.DisplayFor(m => item.ReceiptNumber)</td>
                                                                    <td>@Html.DisplayFor(m => item.ReceiptDate)</td>
                                                                    <td>@Html.DisplayFor(m => item.TotalReceiptValue)</td>
                                                                    <td></td>
