                                                                                <label>Total SGST</label>
                                                                                @Html.TextBoxFor(m => m.TotalSGST, new { @class = "form-control", @id = "totalsgst", @readonly = true })
                                                                            </div>
                                                                        </div>
                                                                    </div>
