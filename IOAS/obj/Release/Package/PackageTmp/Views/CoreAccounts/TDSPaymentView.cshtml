                                                                        </div>
                                                                    </div>
                                                                    <div class="col-md-3 pull-center">
                                                                        <div class="reg-no custom-reg-no">
                                                                            <div class="form-group custom-form-group">
                                                                                <label>TDS(Dr)</label>
                                                                                @Html.TextBoxFor(m => m.TDSTransaction, new { @class = "form-control", @id = "tdstrans", @readonly = true })
