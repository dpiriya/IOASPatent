                                                                        <div class="reg-no custom-reg-no">
                                                                            <div class="form-group custom-form-group">
                                                                                <label>Total TDS-GST</label>
                                                                                @Html.TextBoxFor(m => m.TotalGST, new { @class = "form-control", @id = "totalgst", @readonly = true })
                                                                            </div>
