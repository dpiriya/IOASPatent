@model IOAS.Models.BOATransactionDetailsModels
@{
    ViewBag.Title = "Report";
    ViewBag.Subtitle = "Reports";
    Layout = "~/Views/Shared/_LayoutFluid.cshtml";
}

<div class="row hd-tt-bg ">
    <div class="col-md-12">
        <h4><b>Accounting Transaction Details</b></h4>
    </div>
</div>	

<div class="row">
    <div class="page-wrapper">
        <div class="col-md-12 mt30">



            <div class="row">

                <div class="col-md-12">

                    <div class="vh-tt-bg vh-tt-bg-adj mt-null">
                        <div class="vh-frm-bg bl-lg-panel-box pb-null br-adj-null">
                            <div class="row">

                                <div class="">
                                    <div class="col-md-12">
                                        <div class="grey-bg-adj mb-lg">
                                            <div class="row">
                                                <div class="col-md-12">


                                                    <div class="row mt-md">

                                                        <div class="col-md-3 ">
                                                            <div class="form-group custom-form-group ">
                                                                <label>From:<label style="color:red">*</label> </label><br />
                                                                @Html.TextBoxFor(m => m.PostedDate, new { @class = "form-control", @id = "datepicker1" })
                                                            </div>
                                                        </div>


                                                        <div class="col-md-3">
                                                            <div class="form-group custom-form-group ">
                                                                <label>To: <label style="color:red">*</label> </label><br />
                                                               @Html.TextBoxFor(m => m.PostedDate, new { @class = "form-control", @id = "datepicker2" })
                                                            </div>
                                                        </div>

                                                        <div class="col-md-3">
                                                            <div class="form-group custom-form-group ">
                                                                <label>Transaction Type </label><br />
                                                                @Html.DropDownListFor(m => m.TransactionType, new SelectList(ViewBag.TransactionType, "TransactionType", "TransactionType"), "Select TransactionType", new { @class = "form-control", @id = "trans" })
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="form-group custom-form-group ">
                                                                <label>Project Number </label>
                                                                @Html.DropDownListFor(m => m.ProjectNumber, new SelectList(ViewBag.ProjectNumber, "ProjectNumber", "ProjectNumber"), "Select ProjectNumber", new { @class = "form-control", @id = "proj" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>

        </div>

        <div class="row">
            <div class="col-md-12 mt-md mb-lg text-center">
                <input type="submit" value="Generate Report" class="btn btn-primary" id="btnSubmit" />
            </div>
        </div>
    </div>

</div>

<script>


    $('#datepicker1').datepicker({ format: 'yyyy-mm-dd' });
    $('#datepicker2').datepicker({ format: 'yyyy-mm-dd' });
    //$('#trans').chosen();
    //$('#proj').chosen();
    $('#btnSubmit').click(function () {
        var fromdate = $('#datepicker1').val();
        var todate = $('#datepicker2').val();
        var transactiontype = $('#trans').val();
        var projectnumber = $('#proj').val();
        var win = window.open('', '_blank');
        var url = "@Url.RouteUrl(new {Controller = "ReportMaster", Action = "BOATransactionDetails" })?fromdate=" + fromdate + "&todate=" + todate
                  + "&projectnumber=" + projectnumber + "&transactiontype=" + transactiontype;
        win.location.href = url;
    });

</script>